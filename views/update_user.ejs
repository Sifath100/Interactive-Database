<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->
<!-- Main site -->
        <main id="site-main">
            <div class="container">
                <div class="box-nav d-flex-justify-between">
                    <div class="filter">
                        <a href="/"><i class="fa-solid fa-backward"></i> All users</a>
                    </div>
                </div>
                <div class="form-title text-center">
                    <h2 class="text-dark">Update User</h2>
                    <span class="text-light">Form to update user</span>
                </div>
                <form method="post" id="update_user">
                    <div class="new-user">
                        <div class="form-group">
                            <input type="hidden" name="_id" value="<%=user['_id']%>">

                        </div>
                        <div class="form-group">
                            <label for="name" class="text-light">Name</label>
                            <input type="text" name="name" value="<%=user['name']%>" placeholder="Enter name">
                        </div>
                        <div class="form-group">
                            <label for="Email" class="text-light">Email</label>
                            <input type="text" name="Email" id="" value="<%=user['Email']%>" placeholder="abc@xyz.com">
                        </div>
                        <div class="form-group">
                            <label for="gender" class="text-light">Gender</label>
                            <div class="radio inline">
                                <input type="radio" name="gender" value="Male" <%=user['gender'].toLowerCase()=="male"?"checked":""%>>
                                <label for="gender" class="text-light">Male</label>
                            </div>
                            <div class="radio inline">
                                <input type="radio" name="gender" value="Female" <%=user['gender'].toLowerCase()=="female"?"checked":""%>>
                                <label for="gender" class="text-light">Female</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="status" class="text-light">Status</label>
                            <div class="radio inline">
                                <input type="radio" name="status" value="Active" <%=user['status'].toLowerCase()=="active"?"checked":""%>>
                                <label for="status" class="text-light">Active</label>
                            </div>
                            <div class="radio inline">
                                <input type="radio" name="status" value="Inactive" <%=user['status'].toLowerCase()=="inactive"?"checked":""%>>
                                <label for="status" class="text-light">Inactive</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn text-dark update">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </main>
<!-- /Main site -->
    

<%-include("include/_footer")%>
